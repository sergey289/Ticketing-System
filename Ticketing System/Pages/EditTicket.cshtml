@page
@model Ticketing_Systems.Pages.EditTicketModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/8e0aa5d7dc.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <link rel="stylesheet" href="~/css/EditTicket.css">
    <link rel="stylesheet" href="~/css/EditTicket.css"/>
    <link rel="stylesheet" href="~/css/VersionAssociation.css" />
    <link rel="stylesheet" href="~/css/HoursReport.css" />
    <script src="~/js/EditTicket.js"></script>

</head>

<body>

    <header>

        <div class="infoTicket">

            <label>תאריך עדכון אחרון</label>
            <br>
            <span> 78743 </span>                      

            <i class="fa fa-clock-o" aria-hidden="true" style="color: #5b85a1;"></i>

        </div>

        <div class="infoTicket">

            <label>תאריך פתיחה</label>
            <br>
            <span> 78743 </span>                      
            <i class="fa fa-clock-o" aria-hidden="true" style="color: #5b85a1;"></i>
        </div>

        <div class="infoTicket">

            <label>נוצר על ידי</label>
            <br>
            <span> 78743 </span>                      
            <i class="fa fa-user" aria-hidden="true" style="color: #5b85a1;"></i>

        </div>

        <div class="infoTicket">

            <label>מספר קריאה</label>
            <br>
            <span> 78743 </span>                      
            <i class="fa-solid fa-ticket" style="color: #5b85a1;"></i>

        </div>
    
        <div class="row g-3">

            <div class="col">
                <button id="closeTicketWindow">סגור
                    <i class="fa fa-times" aria-hidden="true"></i>
                 </button> 
            </div>

            <div class="col">
               

                <button id="editTicket">עריכה
                    <i class="fa fa-pencil" aria-hidden="true"></i>
               </button style="pa"> 

            </div>

            <div class="col">
                
                <button id="deleteTicket">מחק קריאה
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
               </button style="pa">

            </div>

        </div>

    </header>

    <main>

        <div id="secOne">

            <section class="report">

                <h5 class="operationTitle">דיווח</h5>
    
                <div class="reportSection">
    
                    <div class="mb-3">
                        <label for="priority">אחראי תיקון</label>               
                        <select class="form-select" aria-label="Default select example" id="priority"> </select>                  
                    </div>
    
                    <div class="mb-3">
                        <label for="priority">מחלקה</label>               
                        <select class="form-select" aria-label="Default select example" id="priority"> </select>                  
                    </div>
    
                </div>
       
                <div class="reportSection">
    
                    <div class="mb-3">
                        <label for="priority">שם אפליקציה</label>               
                        <select class="form-select" aria-label="Default select example" id="typeTreatment"> </select>                  
                    </div>
    
                    <div class="mb-3">
                        <label for="priority">גירסה</label>               
                        <select class="form-select" aria-label="Default select example" id="typeTreatment"> </select>                  
                    </div>
    
                </div>
               
       
                <div class="reportSection">
    
                    <div class="mb-3">
                        <label for="priority">זמן פתיחה מוערך</label>               
                        <select class="form-select" aria-label="Default select example" id="ticketStatus"> </select>                  
                    </div>
    
                    <div class="mb-3">
                        <label for="priority">Code Review</label>               
                        <select class="form-select" aria-label="Default select example" id="ticketStatus"> </select>                  
                    </div>
    
                </div>

                <div style="display: flex;gap: 10px;">                   
                    <div>
                        <button id="btn-belonghoursReport">דיווח שעות
                            <i class="fa fa-clock-o" aria-hidden="true"></i>
                        </button>                     
                    </div>
                
                    <div>  
                        <button id="belongsVer">שייך לגירסה
                            <i class="fa fa-random" aria-hidden="true"></i>                          
                        </button>       
                    </div>
                </div>
    
            </section>
            
    
            <section class="status">
    
             <h5 class="operationTitle">סטטוס</h5>
    
                <div class="mb-3">
                    <label for="priority">עדיפות</label>               
                    <select class="form-select" aria-label="Default select example" id="priority"> </select>                  
                </div>
    
                <div class="mb-3">
                    <label for="priority">סוג טיפול</label>               
                    <select class="form-select" aria-label="Default select example" id="typeTreatment"> </select>                  
                </div>
     
                <div class="mb-3">
                    <label for="priority">סטטוס קריאה</label>               
                    <select class="form-select" aria-label="Default select example" id="ticketStatus"> </select>                  
                </div>
    
            </section>
            
        </div>
  
        <div id="secTwo">

            <section class="ticketDetails">

                <h5 class="operationTitle">פרטי טיקט</h5>

                    <div id="title">
                        <label for="">כותרת</label>
                        <br>
                        <input type="text" id="ticketTitle" style="width: 40%;">
                    </div>

                    <div>

                       <label for="">תיאור</label>
                          <br>
                        <textarea id="ticketDescription" style="width: 40%;"></textarea>
                    </div>

                    <div style="display: flex; gap: 10px;">
                        <button id="attached">מצורפים
                          
                            <svg viewBox="0 0 100 100" width="18" style="float: inline-end;" id="numberAttachedFiles">                         
                                <circle cx="50" cy="50" r="45" fill="red" stroke="black" stroke-width="2"/>                          
                                <text x="50%" y="55%" fill="white" font-size="60" font-family="Arial" text-anchor="middle" alignment-baseline="central">5</text>
                           </svg>
                           
                        </button>
                        <button id="ticketRemarks">הערות</button>
                        <button id="ticketChatt">צאט</button>
                    </div>

                </section>

        </div>

        <div id="popUpVersionAssociation" hidden>

              <form id="VersionAssociationForm">
        
                <div class="container">

                  <h5>שיוך גירסה</h5>

                  <br />

                  <div class="mb-3">
                    <label for="versionName">גירסה</label>
                    <select
                      class="form-select"
                      aria-label="Default select example"
                      id="versionName"
                    ></select>
                  </div>

                  <div class="mb-3">
                    <select
                      class="form-select"
                      aria-label="Default select example"
                      id="versionName2"
                    ></select>
                  </div>

                  <div class="mb-3">
                    <input type="button" value="שמור" id="VersionAssociationSave" />
                    <input type="button" value="יציאה" id="VersionAssociationCancel" />
                  </div>
                </div>
        
              </form>
         </div>

        <div id="popUpHoursReport" hidden>

              <form id="HoursReportForm">

                <div class="container">

                  <h5>דיווח שעות עבודה</h5>

                  <br />

                  <div class="mb-3">
                    <label for="datetimeReport" class="form-label">תאריך דיווח</label>
                    <input
                      dir="rtl"
                      id="datetimeReport"
                      class="form-control"
                      type="date"
                      lang="he"
                    />
                  </div>

                  <div class="mb-3">
                    <label for="priority">שעות עבודה</label>
                    <input
                      dir="rtl"
                      id="datetimeReport"
                      class="form-control"
                      type="time"
                      lang="he"
                    />
                  </div>

                  <div class="mb-3">
                    <label for="HoursReportDesc">הערות</label>
                    <textarea class="form-control" placeholder="" id="desc"></textarea>
                  </div>

                  <div class="mb-3">
                    <input type="button" value="שמור" id="hoursReportSave" />
                    <input type="button" value="יציאה" id="hoursReportCancel" />
                  </div>

                </div>

              </form>
    </div>


    </main>

</body>

</html>